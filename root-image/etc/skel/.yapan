[%General]
Time=15
MsgTimeout=-1
Recheck=true
SyncStartup=false
StopIfUpdateFound=true
ShowLastSync=true
ShowSyncIn=true
Host=www.google.com
HostPort=80
CheckLockFile=true
LockFile=/var/lib/pacman/db.lck
TmpLockFile=/tmp/yapan/db.lck

[Terminal]
Call="sudo uxterm -e \"%1; echo && echo --- Finished ---\""

[Images]
Online=:/on.svg
Offline=:/off.svg
Synchronize=:/sync.gif
Update=:/up.gif
Stopped=:/stop.svg

[Process]
Sync=fakeroot pacman -Syy --dbpath /tmp/yapan/ &> /dev/null
Verify=pacman -Qqu --dbpath /tmp/yapan/
Update=pacman -Su --dbpath /tmp/yapan

[Sounds]
Play=true
Volume=100
StopSounds=false
Stop=@Variant(\0\0\0\xf\0\0\0\0)
Start=@Variant(\0\0\0\xf\0\0\0\0)
UpdateSound=/usr/share/yapan/sounds/yapan.ogg

[Misc]
IconUpAv=emblem-important
Notify=true
ShowQuantity=false
NotifyMaxItems=6
DTFormat=yyyy-MM-dd hh:mm:ss
LangLocation=/usr/share/yapan/languages/
Language=en_US

[Notification]
NotifySend=false

[Log]
AutoSaveLog=false
EnableLog=false
LogsName=yyyy-MM-dd hh:mm:ss' - Yapan Log'
LogsFolder=/home/lukas
